<Window x:Class="SmartDictionary.AddWord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartDictionary"
        mc:Ignorable="d"
        Title="AddWord" Height="166" Width="276">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="WordInput" Grid.Row="0" Height="30" Width="200" Text="{Binding Word}"/>
        <TextBox x:Name="TranslationInput" Grid.Row="1" Height="30" Width="200" Text="{Binding Translation}"/>
        <Button Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Добавить" Click="Click"/>
    </Grid>
</Window>
