<Window x:Class="SmartDictionary.ViewWordsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartDictionary"
        mc:Ignorable="d"
        Title="ViewWordsWindow" Height="450" Width="431">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Слова в словаре" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Comic Sans MS" FontSize="36"/>
        <DataGrid x:Name="WordsTable" Grid.Row="1" AutoGenerateColumns="True"/>
    </Grid>
</Window>
