<Window x:Class="SmartDictionary.TrainingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartDictionary"
        mc:Ignorable="d"
        Title="TrainingWindow" Height="372" Width="360">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Напиши перевод слова" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" FontFamily="Comic Sans MS" FontWeight="Bold"/>
        <TextBlock Grid.Row="1" Text="Some word" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Comic Sans MS" FontSize="20"/>
        <TextBox Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="31"/>
        <Button Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Подтвердить" FontFamily="Comic Sans MS" Height="59" Width="138" FontSize="20"/>
    </Grid>
</Window>
